---
const { id } = Astro.props;
---

<style>
  dialog {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
  }

  @media (max-width : 930px) {
  dialog {
    width: 85%;
  }
    
  }

  dialog::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(255, 0, 0, 0.1);
  }
</style>

<dialog
  id={id}
  class="relative bg-gray-800 rounded-md h-[30em] overflow-y-scroll"
>
  <slot name="main" class="absolute top-0 left-0" />
  <form
    class="absolute flex justify-center items-center top-0 right-0 mt-2 me-2 p-1 rounded-md outline outline-black text-black dark:text-white dark:outline-white"
    method="dialog"
  >
    <slot class="text-2xl" name="close" />
  </form>
</dialog>


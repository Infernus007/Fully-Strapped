---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import MainContainer from "../components/MainContainer.astro";
import Footer from "../components/Footer.astro";
import CardLayout from "../layouts/CardLayout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Fully Straped.">
  <Sidebar />
  <MainContainer subtitle="Portal of my experiences" title="Fully Strapped" />
  <div class="md:ml-20 lg:ml-88 pt-4">
    <CardLayout>
      <Card
        title="Components"
        description="Various components that I have either created or cloned"
        img="components.jpg"
        url="/Components"
      />
      <Card
        title="Layouts"
        description="In progress"
        img="layouts.jpg"
        url="#"
      />
      <Card
        title="Web Pages"
        description="In progress"
        img="theme.jpg"
        url="#"
      />
    </CardLayout>
    <Footer />
  </div>
</Layout>
